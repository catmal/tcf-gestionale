<div class="w-full h-min-screen p-4">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div id="supplier_orders" class="min-w-full">
    <div class="mx-auto w-full">
      <div class="flex justify-between items-center h-full mb-4">
        <h1 class="font-bold text-4xl text-gray-dark">Ordini Fornitori</h1>

      </div>
    </div>
  </div>
  <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
    <% if @supplier_orders.count.positive? %>
      <%= render "supplier_orders/supplier_orders", supplier_orders: @supplier_orders %>
    <% else %>
      <p class="p-2 text-xl">Non ci sono ancora ordini fornitori. Per iniziare a crearne apri una
        distinta e clicca
        <strong>Nuovo Ordine Fornitore
        </strong></p>
    <% end %>
  </div>
