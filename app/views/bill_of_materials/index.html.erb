<div class="w-full h-min-screen p-4">
  <div id="bill_of_materials" class="min-w-full">
    <div class="mx-auto w-full">
      <div class="flex justify-between items-center h-full mb-4">
        <h1 class="font-bold text-4xl text-gray-dark">Distinte</h1>
        <%= form_tag( import_bill_of_materials_path,  multipart: true, class: 'border-gray') do %>
          <div class="flex">
            <%= file_field_tag "xml_file",
            class:
              "pt-1 block w-full text-sm text-gray-dark border rounded-lg cursor-pointer bg-gray-50 dark:text-gray-400 focus:outline-none dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400" %>
            <%= submit_tag "Importa", class: "btn-positive ml-4" %>
          </div>
        <% end %>
      </div>
      <div class="relative overflow-x-auto shadow-md sm:rounded-lg">
        <% if @bill_of_materials.count.positive? %>
          <table class="w-full text-sm text-left rtl:text-right">
            <thead class="sticky top-0 text-xs text-light uppercase bg-gray-dark">
              <tr>
                <th scope="col" class="px-6 py-3">
                  Data
                </th>
                <th scope="col" class="px-6 py-3">
                  Numero
                </th>
                <th scope="col" class="px-6 py-3">

                </th>
              </tr>
            </thead>
            <tbody>
              <% @bill_of_materials.each do | bill | %>
                <tr
                  data-href="<%= bill_of_material_path(bill.id) %>"
                  class="text-light bg-blue border-b border-gray"
                >
                  <td scope="row" class="px-6 py-4 font-medium whitespace-nowrap ">
                    <%= bill.date %>
                  </td>
                  <td class="px-6 py-4 ">
                    <%= bill.number %>
                  </td>
                  <td class="px-6 py-4 text-right">
                    <%= link_to "Mostra", bill_of_material_path(bill.id), class: "btn-primary" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% else %>
          <p class="p-2 text-xl">Non ci sono ancora distinte. Inizia ad importarne.</p>
        <% end %>
      </div>
    </div>
  </div>
