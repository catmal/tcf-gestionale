<ul
  data-sidebar-menu="menu"
  data-active="Suggestions"
  class="mt-4 flex flex-col overflow-hidden space-y-2"
>
  <% Menu::ITEMS.each do |item| %>
    <li>
      <a
        href="<%= item[:link]%>"
        class="
          <%= ' bg-gray text-light' if (params[:controller] == item[:controller])  %> flex items-center text-xl p-2 text-gray
          rounded-lg hover:bg-gray hover:text-light
        "
      >
        <div class="">
          <i
            class="
              <%= 'text-light bg-dark-gray' if params[:controller] == item[:controller] %> <%= item[:icon]%>
              text-lg
            "
          ></i>
          <span data-sidebar-target="link"><%= item[:name] %></span>
        </div>
      </a>
    </li>
  <% end %>
</ul>
